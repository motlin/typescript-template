{
	"name": "@your-org/typescript-template",
	"version": "0.0.0",
	"description": "A standardized TypeScript project template",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"preview": "vite preview",
		"build": "tsc && vite build",
		"lint": "eslint . --fix",
		"format": "npx biome format --write . && prettier --write .",
		"ci:eslint": "eslint . --format json --output-file eslint_report.json",
		"ci:prettier": "prettier --check \"src/**/*.{js,ts,css,md,json}\"",
		"ci:biome": "npx biome format .",
		"ci:typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test-storybook": "npx concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npx http-server storybook-static --port 6006 --silent\" \"npx wait-on tcp:127.0.0.1:6006 && test-storybook\""
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@chromatic-com/storybook": "^4.1.3",
		"@eslint/js": "^9.30.1",
		"@storybook/addon-a11y": "^10.1.4",
		"@storybook/addon-docs": "^10.1.4",
		"@storybook/addon-onboarding": "^10.1.4",
		"@storybook/addon-vitest": "^10.1.4",
		"@storybook/react-vite": "^10.1.4",
		"@storybook/test-runner": "^0.24.2",
		"@testing-library/react": "^16.3.0",
		"@sentry/vite-plugin": "^4.6.1",
		"@tanstack/react-query-devtools": "^5.91.1",
		"@types/node": "^25.0.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.38.0",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/browser": "4.0.15",
		"@vitest/coverage-v8": "4.0.15",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"eslint-plugin-storybook": "^10.1.4",
		"globals": "^16.5.0",
		"jiti": "^2.5.0",
		"jsdom": "^27.3.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"storybook": "^10.1.9",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vitest": "^4.0.9",
		"vitest-browser-react": "^2.0.2"
	},
	"dependencies": {
		"lucide-react": "^0.561.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3"
	}
}
